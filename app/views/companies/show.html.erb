<h1><%= @company["name"] %></h1>
<h2>
    <%= @company["city"] %>,
    <%= @company["state"] %>
</h2>
<p>
    <a href="/companies">Back to all companies</a>
</p> 

<ul>    
    <% contacts = Contacts.where({"company_id" => @company["id"]}) %>
    <% for contact in contacts %>
        <li>
            <%= contact["first_name"] %>
            <%= contact["last_name"] %>
        </li>
    <% end %>
</ul>